{
    "version": 2,
    "builds": [
      {
        "src": "api/index.php",
        "use": "@vercel/php"
      },
      {
        "src": "public/**/*.{js,css}",
        "use": "@vercel/static-build"
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/api/index.php" },
      { "handle": "filesystem" },
      { "src": "/(.*)", "dest": "/public/$1" }
    ]
  }
  