{
    "version": 2,
    "builds": [
      {
        "src": "api/index.php",
        "use": "@vercel/php"
      },
      {
        "src": "resources/js/app.js",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "public",
          "verbose": true 
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/api/index.php"
      }
    ]
  }
  